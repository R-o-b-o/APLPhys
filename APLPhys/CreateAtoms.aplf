 CreateAtoms(n posopt velopt)
 natoms←n+≢pos
 density←natoms÷volume
 :If posopt∊random
     :If pos≡⍬
         pos←?n dim⍴0 ⍝ Generate random positions
     :Else
         pos⍪←?n dim⍴0
     :EndIf
 :EndIf
 :If velopt∊random
     vel←?natoms dim⍴0
     ⍝ Remove CoM drift
     vel←vel-⍤1⊢(+⌿÷≢)vel
 :EndIf
